<Window x:Class="WpfApp2.Page.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2.Page"
        mc:Ignorable="d"
        Title="Гостиница" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="60"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10,0,0">
            <TextBlock FontSize="30">Логин (Телефон, EMaiL)</TextBlock>
            <TextBox x:Name="Login" Width="300" FontSize="30" Margin="0,10,0,0"></TextBox>
            <TextBlock FontSize="30">Пароль</TextBlock>
            <TextBox x:Name="Password" Width="300" FontSize="30" Margin="0,10,0,0"></TextBox>
        </StackPanel>
        <Button Grid.Row="1" x:Name="BtnAuth" Click="BtnAuth_Click" Width="100" Height="40" FontSize="20">Вход</Button>
        <Image Margin="25,20,618,182" Source="/6767676767.jpg" Stretch="Fill"/>

    </Grid>
</Window>
